    "@nuxtjs/pwa": "^3.0.0-0",
    "moment": "^2.24.0",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "@nuxtjs/vuetify": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^2.6.0",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0"

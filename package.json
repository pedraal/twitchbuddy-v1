{
  "name": "twitchbuddy",
  "version": "1.0.0",
  "description": "A web app that provides several services for twitch viewers",
  "author": "pierre golfier",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
